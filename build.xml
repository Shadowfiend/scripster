<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="scripster">
    <property file="../razbase/razie.properties"/>
    <property name="w" value="${workspace.dir}"/>
    <property name="d" value="./dist"/>
    <import   file="${w}/razbase/base-build.xml"/>

    <path id="rundist.path">
        <pathelement location="${d}/scripster-dist.jar"/>
        <pathelement location="${scala.home}/lib/scala-library.jar"/>
        <pathelement location="${scala.home}/lib/scala-compiler.jar"/>
        <pathelement location="${scala.home}/lib/scala-swing.jar"/>
    </path>

    <target name="run-dist">
        <echo message="Running ${ant.project.name}: ${ant.file}"/>

        <java classname="razie.scripster.MainSwingScripster">
            <classpath refid="rundist.path" />
        </java>
    </target>

    <target name="dist">
        <delete  dir="${d}"/>
        <mkdir  dir="${d}"/>
        <mkdir  dir="${d}/lib"/>

        <property name="sb" value="target/scala_2.8.1.RC2/classes"/>
        <property name="sbj" value="${w}/scripster/lib_managed/scala_2.8.1.RC2/compile"/>

        <tstamp>
           <format property="stamp" pattern="yyyy/MM/dd hh:mm aa" />
        </tstamp>
        <echo message="${stamp}" file="timestamp.txt"/>

        <jar file="timestamp.txt"
             destfile="${d}/scripster-dist.jar"/>
        <jar  destfile="${d}/scripster-dist.jar" update="true">
            <zipfileset src="${sbj}/20widgets_2.8.1.RC2-0.1-SNAPSHOT.jar"/>
            <zipfileset src="${sbj}/20widgets-swing_2.8.1.RC2-0.1-SNAPSHOT.jar"/>
            <zipfileset src="${sbj}/base_2.8.1.RC2-0.1-SNAPSHOT.jar"/>
            <zipfileset src="${sbj}/razweb_2.8.1.RC2-0.1-SNAPSHOT.jar"/>
            <zipfileset src="${sbj}/razweb_2.8.1.RC2-0.1-SNAPSHOT.jar"/>
            <zipfileset src="${w}/scripster/target/scala_2.8.1.RC2/scripster_2.8.1.RC2-0.4-SNAPSHOT.jar"/>
            <zipfileset src="${sbj}/json-20090211.jar"/>
        </jar>
        <jar destfile="${d}/scripster-dist.jar" update="true">
            <zipfileset src="${w}/razbase/web/lib/mime-util.jar"/> 
            <zipfileset src="${w}/razbase/20w-swing/lib/jsyntaxpane-0.9.5-b29.jar"/>
        </jar>

        <tstamp>
           <format property="stamp" pattern="yyyy/MM/dd hh:mm aa" />
        </tstamp>
        <echo message="${stamp}" file="timestamp.txt"/>

        <jar file="timestamp.txt"
             destfile="${d}/codewitter.jar"/>
        <jar destfile="${d}/codewitter.jar" update="true">
            <zipfileset src="${w}/razpub/lib/log4j-1.2.7.jar"/>
        </jar>


        <mkdir dir="${d}/lib" />
        <copy tofile="${d}/lib/scala-swing.jar" file="${sbj}/scala-swing-2.8.1.RC2.jar" />
        <copy tofile="${d}/lib/scala-compiler.jar" file="${w}/scripster/project/boot/scala-2.8.1.RC2/lib/scala-compiler.jar" />
        <copy tofile="${d}/lib/scala-library.jar" file="${w}/scripster/project/boot/scala-2.8.1.RC2/lib/scala-library.jar" />
        <copy todir="${d}/lib" file="${sbj}/scalaz-core_2.8.0-5.0.jar" />
        <copy todir="${d}/lib" file="lib/jline-0_9_5.jar" />

    </target>

</project>
